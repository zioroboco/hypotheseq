{
  "compilerOptions": {
    "lib": ["es2021", "dom"],
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "nodenext",

    "allowJs": true,
    "checkJs": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["**/*.d.ts", "**/*.js", "**/*.json"],
  "exclude": ["**/node_modules"]
}
